@using DataAccess.Concrete.EntityFramework.Context;

@model ApartmentController.Index_VM
@{
    var cities = ViewBag.cities as List<City>;

}
<div id="modalPlaceHolder" aria-hidden="true"></div>
<div class="card mb-4 mt-2">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        @Model.PageTitle
    </div>
    @using (Html.BeginForm("Index", "Apartment", FormMethod.Get)) //bazi durumlarda POST ile de calisabilirsin, daha temiz bir url yapisi gormek icin. Bu konuyu ve kullanim senaryolarini arastir.
    {
        <div class="row ml-2">

            <div class="col-md-3">

                <label>Siralama Yap: </label>

                <select class="form-control" asp-for="OrderBy" asp-items="@Model.SortOptions"></select>

            </div>


            <div class="col-md-3">

                <label>Sehir Sec </label>

                @if (cities != null)
                {
                    <select name="cityId" class="form-control" asp-for="CityId">
                        <option value="">Tüm Şehirler</option>
                        @foreach (var city in cities)
                        {
                            <option value="@city.CityId">@city.CityName</option>
                        }
                    </select>
                    //@Html.DropDownList("cityId", new SelectList(cities, "SelectedValue", "SelectedText"), "Sehir Sec")

                }

            </div>

        </div>
        <div class="row ml-2 col-md-3">

            <button type="submit" class="btn btn-primary mt-2 mr-1">Listele</button>
            <input type="button" class="btn btn-primary mt-2" value="Sıfırla" onclick="location.href='@Url.Action("Index")'" />
        </div>
    }

    <div class="card-body">
        <div class="col-sm-12 text-center">
            <div class="dataTables_info F11" id="bootstrap-data-table-export_info" role="status" aria-live="polite">
                <b>@Model.MyPagination.TotalRecords</b> kayıttan <b>@(Model.MyPagination.pageSize * (Model.MyPagination.PageIndex - 1)) - @(Model.MyPagination.pageSize * Model.MyPagination.PageIndex)</b> arası görüntüleniyor
            </div>
            <input type="hidden" name="pageIndex" id="pageIndex" value="1" />
        </div>
        <div class="table-responsive">
            <table class="table table-bordered text-center" id="apartmentsTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Kod</th>
                        <th>Apartman Adı</th>
                        <th>Şehir</th>
                        <th>İlçe</th>
                        <th>Yonetici Ad Soyad</th>
                        <th>Telefon Numarası</th>
                        <th>Kapı Numarası</th>
                        <th>Daire Sayısı</th>
                        <th>Açık Adres</th>
                        <th>Güncelleyen</th>
                        <th>Güncelleme Tarihi</th>
                        <th>Aktiflik Durumu</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Kod</th>
                        <th>Apartman Adı</th>
                        <th>Şehir</th>
                        <th>İlçe</th>
                        <th>Yonetici Ad Soyad</th>
                        <th>Telefon Numarası</th>
                        <th>Kapı Numarası</th>
                        <th>Daire Sayısı</th>
                        <th>Açık Adres</th>
                        <th>Güncelleyen</th>
                        <th>Güncelleme Tarihi</th>
                        <th>Aktiflik Durumu</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.PagedList)
                    {
                        <tr>
                            <td>@item.Code</td>
                            <td>@item.ApartmentName</td>
                            <td>@item.CityName</td>
                            <td>@item.CountyName</td>
                            <td>@item.NameSurname</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.DoorNumber</td>
                            <td>@item.NumberOfFlats</td>
                            <td>@item.OpenAdress</td>
                            <td>@item.UpdatedBy</td>
                            <td>@item.UpdatedDate</td>
                            <td>@item.IsActive</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @*partial view ile çalışınca sayfalamada sıralama yaparken url'den haberleşmen gerekir. bunun için helper yazman lazım. Barış Bey'in gönderdiği kodları incele ve sorunu çöz*@


        <div class="pagination-container">
            @await Html.PartialAsync("Pagination", @Model.MyPagination)
        </div>


    </div>
