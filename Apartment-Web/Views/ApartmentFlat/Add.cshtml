                                    <span asp-validation-for="FlatOwner.Email" class="text-danger"></span>

                                </div>
                            </div>



                            <div class="row justify-content-end">
                                <div class="form-group col-sm-6">
                                    <button type="submit" id="btnSave" class="btn-block btn-primary h6">Ekle</button>
